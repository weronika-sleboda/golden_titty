<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2">

    <TextView
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_gravity="start|center_horizontal"
        android:gravity="center"
        android:textColor="@color/super_light_mystery"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/statue_of_goddess_chidinma"
        android:background="@drawable/dark_one_corner_rectangle_background"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/extreme_dark_rectangle_background">

        <ImageView
            android:id="@+id/icon"
            android:contentDescription="@string/action_icon_cd"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"/>

    </FrameLayout>

    <include
        android:id="@+id/insertion_controller"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        layout="@layout/insertion_statue_layout"/>

    <Button
        android:id="@+id/insert_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:backgroundTint="@null"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/light_mystery"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/insert"
        android:layout_marginBottom="15dp"
        android:background="@drawable/dark_rectangle_gradient_button_background"/>

    <Button
        android:id="@+id/leave_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:backgroundTint="@null"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/light_mystery"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/leave"
        android:background="@drawable/dark_rectangle_gradient_button_background"/>

</LinearLayout>