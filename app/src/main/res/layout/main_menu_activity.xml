<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/main_background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="start"
            android:src="@drawable/main_screen_swords"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/main_screen_boomerang"/>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="end"
            android:src="@drawable/main_screen_spears"/>

        <TextView
            android:layout_width="320dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:background="@drawable/extreme_dark_oval_background"
            android:fontFamily="@font/dense_regular"
            android:gravity="center"
            android:text="@string/golden_titty"
            android:textAllCaps="true"
            android:textColor="@color/super_light_mystery"
            android:textSize="60sp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="206dp"
            android:layout_height="206dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/sonny256_icon_cd"
            android:src="@drawable/meteor256" />

    </FrameLayout>

    <Button
        android:id="@+id/play_button"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        app:backgroundTint="@null"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_rectangle_gradient_button_background"
        android:textColor="@color/light_mystery"
        android:text="@string/play" />

    <Button
        android:id="@+id/continue_button"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        app:backgroundTint="@null"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_rectangle_gradient_button_background"
        android:textColor="@color/light_mystery"
        android:text="@string/continue_game" />

    <Button
        android:id="@+id/credits_button"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        app:backgroundTint="@null"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_rectangle_gradient_button_background"
        android:textColor="@color/light_mystery"
        android:text="@string/credits" />

</LinearLayout>