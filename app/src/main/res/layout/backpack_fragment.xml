<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_column="4"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/food_tab"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/super_light_mystery"
        android:textSize="17sp"
        android:background="@drawable/tab_background"
        android:text="@string/food"/>

    <TextView
        android:id="@+id/boomerang_tab"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/super_light_mystery"
        android:textSize="17sp"
        android:background="@drawable/tab_background"
        android:text="@string/boomerangs"/>

    <TextView
        android:id="@+id/items_tab"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/super_light_mystery"
        android:textSize="17sp"
        android:background="@drawable/tab_background"
        android:text="@string/items"/>

    <TextView
        android:id="@+id/clothes_tab"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_height="35dp"
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:gravity="center"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/super_light_mystery"
        android:textSize="17sp"
        android:background="@drawable/tab_background"
        android:text="@string/clothes"/>

    <androidx.core.widget.NestedScrollView
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="105dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/backpack_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.core.widget.NestedScrollView>

</GridLayout>