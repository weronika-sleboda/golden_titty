<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2">

    <TextView
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="0"
        android:id="@+id/customer_name"
        android:layout_width="280dp"
        android:layout_height="30dp"
        android:layout_gravity="start|center_horizontal"
        android:gravity="center"
        android:textColor="@color/super_light_mystery"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_one_corner_rectangle_background"/>

    <GridLayout
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <ImageView
            android:id="@+id/customer_icon"
            android:contentDescription="@string/customer_icon_cd"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/left_extreme_dark_shape_background"/>

        <LinearLayout
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="200dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:columnCount="3"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:background="@drawable/right_light_shape_background"
            android:layout_height="110dp">

            <TextView
                android:id="@+id/customer_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/extreme_dark_mystery"
                android:textSize="18sp"
                android:fontFamily="@font/raleway_medium"/>

        </LinearLayout>

    </GridLayout>

    <include
        android:id="@+id/deal"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        layout="@layout/deal_layout"/>

    <include
        android:layout_row="3"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_gravity="fill_horizontal"
        android:layout_columnWeight="1"
        android:id="@+id/new_deal_button"
        layout="@layout/new_deal_button"/>

    <Button
        android:layout_row="3"
        android:layout_column="1"
        android:id="@+id/accept_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:backgroundTint="@null"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/light_mystery"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/accept"
        android:background="@drawable/dark_shape_gradient_button_background"/>

    <Button
        android:layout_columnSpan="2"
        android:layout_row="4"
        android:layout_column="0"
        android:id="@+id/leave_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:backgroundTint="@null"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/light_mystery"
        android:textSize="18sp"
        android:text="@string/leave"
        android:gravity="center"
        android:background="@drawable/dark_shape_gradient_button_background"/>

</GridLayout>