<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2">

    <TextView
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_gravity="start|center_horizontal"
        android:gravity="center"
        android:textColor="@color/super_light_mystery"
        android:textSize="20sp"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_one_corner_rectangle_background"/>

    <include
        android:id="@+id/requirement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        layout="@layout/investigation_requirement_layout"/>

    <GridLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2">

        <ImageView
            android:id="@+id/icon"
            android:contentDescription="@string/investigation_icon_cd"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/left_extreme_dark_shape_background"/>

        <GridLayout
            android:layout_column="1"
            android:layout_row="0"
            android:layout_width="200dp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:columnCount="2"
            android:background="@drawable/right_middle_dark_shape_background"
            android:layout_height="128dp">

            <androidx.appcompat.widget.SwitchCompat
                android:layout_column="0"
                android:layout_row="0"
                android:id="@+id/first_switch"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:track="@drawable/switch_track_background"
                android:thumb="@drawable/switch_thumb_background"
                android:layout_height="30dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_column="1"
                android:layout_row="0"
                android:id="@+id/second_switch"
                android:layout_width="80dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                app:track="@drawable/switch_track_background"
                android:thumb="@drawable/switch_thumb_background"
                android:layout_height="30dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_column="0"
                android:layout_row="1"
                android:id="@+id/third_switch"
                android:layout_width="80dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                app:track="@drawable/switch_track_background"
                android:thumb="@drawable/switch_thumb_background"
                android:layout_height="30dp"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_column="1"
                android:layout_row="1"
                android:id="@+id/fourth_switch"
                android:layout_width="80dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                app:track="@drawable/switch_track_background"
                android:thumb="@drawable/switch_thumb_background"
                android:layout_height="30dp"/>

        </GridLayout>

    </GridLayout>

    <Button
        android:id="@+id/open_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:backgroundTint="@null"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/light_mystery"
        android:textSize="18sp"
        android:gravity="center"
        android:text="Open"
        android:background="@drawable/dark_rectangle_gradient_button_background"/>

    <Button
        android:id="@+id/leave_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:backgroundTint="@null"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/light_mystery"
        android:textSize="18sp"
        android:text="@string/leave"
        android:gravity="center"
        android:background="@drawable/dark_rectangle_gradient_button_background"/>

</LinearLayout>