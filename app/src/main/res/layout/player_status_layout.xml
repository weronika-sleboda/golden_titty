<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_column="7"
    android:background="@drawable/light_corner_rectangle_background">

    <TextView
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_columnSpan="8"
        android:fontFamily="@font/raleway_bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="@string/meteor"
        android:layout_marginTop="5dp"
        android:background="@drawable/super_light_corner_rectangle_background"
        android:textColor="@color/extreme_dark_mystery"
        android:textAllCaps="true"/>

    <ImageView
        android:id="@+id/icon"
        android:contentDescription="@string/merchant_icon_cd"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowSpan="3"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/super_dark_corner_rectangle_background"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:src="@drawable/meteor64_white_robe" />

    <ImageView
        android:contentDescription="@string/health_icon_cd"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:padding="3dp"
        android:background="@drawable/extreme_dark_rectangle_background"
        android:src="@drawable/health32" />

    <TextView
        android:id="@+id/health"
        android:layout_column="2"
        android:layout_row="1"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:fontFamily="@font/raleway_medium"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/super_dark_rectangle_background"
        android:textColor="@color/super_light_mystery"/>

    <ImageView
        android:contentDescription="@string/accuracy_icon_cd"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:padding="3dp"
        android:background="@drawable/extreme_dark_rectangle_background"
        android:src="@drawable/accuracy32" />

    <TextView
        android:id="@+id/accuracy"
        android:layout_column="4"
        android:layout_row="1"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:fontFamily="@font/raleway_medium"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/super_dark_rectangle_background"
        android:textColor="@color/super_light_mystery"/>

    <ImageView
        android:contentDescription="@string/pearl_titty_icon_cd"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_row="1"
        android:layout_column="5"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:padding="3dp"
        android:background="@drawable/extreme_dark_rectangle_background"
        android:src="@drawable/pearl_titty32"/>

    <TextView
        android:id="@+id/titty_counter"
        android:layout_column="6"
        android:layout_row="1"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:fontFamily="@font/raleway_medium"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/super_dark_rectangle_background"
        android:textColor="@color/super_light_mystery"/>

    <ImageView
        android:contentDescription="@string/agility_icon_cd"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:background="@drawable/extreme_dark_rectangle_background"
        android:src="@drawable/agility32" />

    <TextView
        android:id="@+id/agility"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:fontFamily="@font/raleway_medium"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/super_dark_rectangle_background"
        android:textColor="@color/super_light_mystery"/>

    <ImageView
        android:contentDescription="@string/stealth_icon_cd"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:background="@drawable/extreme_dark_rectangle_background"
        android:src="@drawable/stealth32" />

    <TextView
        android:id="@+id/stealth"
        android:layout_column="4"
        android:layout_row="2"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:fontFamily="@font/raleway_medium"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/super_dark_rectangle_background"
        android:textColor="@color/super_light_mystery"/>

    <ImageView
        android:contentDescription="@string/golden_coin_icon_cd"
        android:layout_width="30dp"
        android:layout_height="32dp"
        android:layout_row="2"
        android:layout_column="5"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:padding="3dp"
        android:background="@drawable/extreme_dark_rectangle_background"
        android:src="@drawable/gold_coin32" />

    <TextView
        android:id="@+id/golden_coins"
        android:layout_column="6"
        android:layout_row="2"
        android:layout_width="60dp"
        android:layout_height="32dp"
        android:fontFamily="@font/raleway_medium"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:layout_marginEnd="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/super_dark_rectangle_background"
        android:textColor="@color/super_light_mystery"/>

</GridLayout>