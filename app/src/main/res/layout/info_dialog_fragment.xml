<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:maxWidth="350dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/super_light_gradient_background">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/super_light_mystery"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_bold"
        android:background="@color/super_dark_mystery"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/middle_dark_shape_background">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="dialog_icon_cd"
            android:background="@drawable/dark_oval_background"
            android:padding="10dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:textColor="@color/extreme_dark_mystery"
        android:textSize="17sp"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/light_shape_background"/>

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_columnWeight="1"
        android:layout_height="40dp"
        android:layout_gravity="center"
        app:backgroundTint="@null"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_rectangle_gradient_button_background"
        android:textColor="@color/light_mystery"
        android:text="@string/ok" />

</LinearLayout>