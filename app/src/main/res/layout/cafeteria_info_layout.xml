<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/extreme_dark_rectangle_background"
    android:layout_column="6">

    <TextView
        android:id="@+id/title"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:layout_gravity="start|center"
        android:gravity="center"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/super_light_mystery"
        android:textSize="18sp"
        android:layout_marginStart="3dp"
        android:text="Price per drink"
        android:background="@drawable/extreme_dark_rectangle_background"/>

    <ImageView
        android:contentDescription="@string/charisma_icon_cd"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_marginStart="3dp"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start|center"
        android:background="@drawable/extreme_dark_rectangle_background"
        android:src="@drawable/gold_coin32"
        android:padding="3dp"/>

    <TextView
        android:layout_column="2"
        android:layout_row="0"
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_gravity="start|center"
        android:gravity="center"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/super_light_mystery"
        android:textSize="18sp"
        android:layout_marginStart="3dp"
        android:text="@string/drink_price"
        android:background="@drawable/middle_dark_rectangle_background"/>

</GridLayout>