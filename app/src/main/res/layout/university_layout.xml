<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_column="3"
    android:id="@+id/food_layout"
    android:background="@drawable/middle_dark_shape_background">

    <ImageView
        android:id="@+id/icon"
        android:contentDescription="@string/food_icon_cd"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_gravity="center"
        android:padding="5dp"
        android:background="@drawable/dark_oval_background"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:gravity="center"
        android:fontFamily="@font/raleway_bold"
        android:layout_marginStart="5dp"
        android:textColor="@color/super_light_mystery"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/price"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:gravity="center"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginStart="5dp"
        android:textColor="@color/super_light_mystery"
        android:textSize="17sp"/>

    <TextView
        android:id="@+id/info"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:gravity="center"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginStart="5dp"
        android:textColor="@color/super_light_mystery"
        android:textSize="17sp"/>

    <ImageView
        android:contentDescription="@string/golden_coin_icon_cd"
        android:id="@+id/button_icon"
        android:layout_column="3"
        android:layout_row="0"
        android:layout_rowSpan="3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:paddingBottom="7dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginEnd="5dp"
        android:src="@drawable/level_up64"
        android:background="@drawable/dark_oval_gradient_button_background"
        android:layout_gravity="center|end"/>

</GridLayout>