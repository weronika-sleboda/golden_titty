<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_column="3"
    android:background="@drawable/middle_dark_shape_background">

    <TextView
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="@font/raleway_bold"
        android:layout_marginBottom="5dp"
        android:textColor="@color/super_light_mystery"
        android:text="@string/new_deal"
        android:padding="5dp"
        android:background="@drawable/super_dark_rectangle_background"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/demand_icon"
        android:contentDescription="@string/demand_icon_cd"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_rowSpan="3"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@drawable/super_dark_rectangle_background"
        android:padding="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:id="@+id/demand_name"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_bold"
        android:layout_marginStart="5dp"
        android:textColor="@color/super_light_mystery"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/demand_amount"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginStart="5dp"
        android:textColor="@color/super_light_mystery"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/reward_info"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginStart="5dp"
        android:textColor="@color/super_light_mystery"
        android:textSize="20sp"/>


</GridLayout>