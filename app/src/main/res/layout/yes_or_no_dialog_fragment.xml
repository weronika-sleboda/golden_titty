<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:maxWidth="350dp"
    android:layout_gravity="center"
    android:padding="10dp"
    android:layout_column="2"
    android:background="@drawable/super_light_gradient_background">

    <TextView
        android:id="@+id/title"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="fill_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/super_light_mystery"
        android:textSize="22sp"
        android:fontFamily="@font/raleway_bold"
        android:background="@color/super_dark_mystery"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_columnSpan="2"
        android:background="@drawable/middle_dark_shape_background">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginTop="14dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="dialog_icon_cd"
            android:background="@drawable/dark_oval_background"
            android:padding="10dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/message"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_columnSpan="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:textColor="@color/extreme_dark_mystery"
        android:textSize="18sp"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/light_shape_background"/>

    <Button
        android:id="@+id/yes_button"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_height="40dp"
        android:layout_gravity="fill_horizontal"
        app:backgroundTint="@null"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_shape_gradient_button_background"
        android:textColor="@color/light_mystery"
        android:text="@string/yes" />

    <Button
        android:id="@+id/no_button"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_columnWeight="1"
        android:layout_height="40dp"
        android:layout_gravity="fill_horizontal"
        app:backgroundTint="@null"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:gravity="center"
        android:textAllCaps="true"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_shape_gradient_button_background"
        android:textColor="@color/light_mystery"
        android:text="@string/no" />

</GridLayout>