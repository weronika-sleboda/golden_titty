<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:columnCount="2">

    <TextView
        android:id="@+id/name"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_gravity="start|center_horizontal"
        android:gravity="center"
        android:textColor="@color/super_light_mystery"
        android:textSize="20sp"
        android:fontFamily="@font/raleway_medium"
        android:background="@drawable/dark_one_corner_rectangle_background"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/extreme_dark_shape_background"
        android:columnCount="2">

        <ImageView
            android:id="@+id/icon"
            android:contentDescription="@string/bed_icon_cd"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:padding="5dp"/>

    </FrameLayout>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/light_mystery"
        android:textSize="17sp"
        android:padding="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/middle_dark_shape_background"
        android:fontFamily="@font/raleway_medium"/>

    <Button
        android:id="@+id/grab_button"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:backgroundTint="@null"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/light_mystery"
        android:textSize="18sp"
        android:gravity="center"
        android:text="@string/take"
        android:background="@drawable/dark_rectangle_gradient_button_background"/>

</LinearLayout>