<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/dark_mystery"
                android:centerColor="@color/extreme_dark_mystery"
                android:endColor="@color/dark_mystery"
                android:angle="270"/>

            <corners
                android:bottomRightRadius="300dp"
                android:topRightRadius="300dp"
                android:bottomLeftRadius="300dp"
                android:topLeftRadius="300dp"/>
            <stroke
                android:color="@color/contrast_mystery"
                android:width="2dp"/>
        </shape>
    </item>
</selector>