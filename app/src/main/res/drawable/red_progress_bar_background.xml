<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid
                android:color="@color/dark_mystery"/>
            <corners
                android:radius="20dp"/>
            <stroke
                android:color="@color/extreme_dark_mystery"
                android:width="1dp"/>
        </shape>

    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/light_red"
                    android:centerColor="@color/red"
                    android:endColor="@color/light_red"
                    android:angle="270"/>
                <corners
                    android:radius="20dp"/>
                <stroke
                    android:color="@color/extreme_dark_mystery"
                    android:width="1dp"/>
            </shape>
        </clip>

    </item>
</layer-list>