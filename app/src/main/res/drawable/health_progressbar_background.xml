<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="@color/dark_mystery"
                android:centerColor="@color/mystery"
                android:endColor="@color/dark_mystery"
                android:angle="270" />
            <stroke
                android:color="@color/extreme_dark_mystery"
                android:width="2dp"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/green"
                    android:centerColor="@color/light_green"
                    android:endColor="@color/green"
                    android:angle="270"
                    />
                <stroke
                    android:color="@color/extreme_dark_mystery"
                    android:width="2dp"/>
            </shape>
        </clip>
    </item>
</layer-list>