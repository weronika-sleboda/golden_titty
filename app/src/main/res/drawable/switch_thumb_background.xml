<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/super_light_mystery"
                android:centerColor="@color/mystery"
                android:endColor="@color/light_mystery"
                android:angle="270"/>
            <size android:width="40dp"
                android:height="40dp"/>
            <stroke android:width="1dp"
                android:color="@color/extreme_dark_mystery"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="oval">
            <gradient
                android:startColor="@color/super_light_mystery"
                android:centerColor="@color/mystery"
                android:endColor="@color/light_mystery"
                android:angle="270"/>
            <size android:width="40dp"
                android:height="40dp"/>
            <stroke android:width="1dp"
                android:color="@color/extreme_dark_mystery"/>
        </shape>
    </item>
</selector>
