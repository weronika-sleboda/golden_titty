<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pregnantunicorn.merchantofgoldlakehorizon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MerchantOfGoldlakeHorizon">

        <activity
            android:name=".views.activities.WorldActivity"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.activities.EventActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <activity
            android:name=".views.activities.MainMenuActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>

        <activity
            android:name=".views.activities.GameOverActivity"
            android:screenOrientation="portrait"
            android:exported="true">
        </activity>

    </application>

</manifest>